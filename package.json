{
    "name": "micro-mvc",
    "version": "1.3.1",
    "description": "A minimal MVC tool",
    "main": "lib/index.js",
    "dependencies": {},
    "devDependencies": {
        "@babel/cli": "^7.5.0",
        "@babel/core": "^7.5.4",
        "@babel/plugin-transform-runtime": "^7.5.0",
        "@babel/preset-env": "^7.5.4",
        "@babel/runtime": "^7.5.4",
        "babelify": "^10.0.0",
        "browserify": "^16.3.0",
        "esdoc": "^1.1.0",
        "esdoc-ecmascript-proposal-plugin": "^1.0.0",
        "esdoc-standard-plugin": "^1.0.0",
        "mocha": "^6.1.4",
        "uglify-js": "^3.6.0"
    },
    "scripts": {
        "test": "mocha",
        "build": "esdoc && babel src/ --out-dir lib/ -s && browserify src/index.js -d -s mvc -t [ babelify ] | uglifyjs > dist/micro-mvc.min.js"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:christophergorexyz/micro-mvc.git"
    },
    "babel": {
        "presets": [
            "@babel/env"
        ],
        "plugins": [
            "module:@babel/plugin-transform-runtime"
        ]
    },
    "esdoc": {
        "source": "./src",
        "destination": "./docs",
        "plugins": [
            {
                "name": "esdoc-ecmascript-proposal-plugin",
                "option": {
                    "all": true
                }
            },
            {
                "name": "esdoc-standard-plugin",
                "option": {
                    "all": true
                }
            }
        ]
    },
    "author": "Christopher J Gore",
    "license": "MIT",
    "homepage": "https://christophergorexyz.github.io/micro-mvc"
}
